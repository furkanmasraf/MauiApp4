<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <BoxView Color="Gray" Grid.Row="0" Grid.Column="0"/>
        <BoxView Color="Green" Grid.Row="0" Grid.Column="1"/>
        <BoxView Color="Blue" Grid.Row="1" Grid.Column="0"/>
        <BoxView Color="Red" Grid.Row="1" Grid.Column="1"/>

        <Label Text="Top Left" FontSize="20" Grid.Row="0" Grid.Column="0"/>
        <Label Text="Top Right" FontSize="20" Grid.Row="0" Grid.Column="1"/>
        <Label Text="Bottom Left" FontSize="20" Grid.Row="1" Grid.Column="0"/>
        <Button x:Name="Button1" Text="OK" FontSize="20" Grid.Row="1" Grid.Column="1"/>

    </Grid>
        

</ContentPage>
